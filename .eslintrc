{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true
	},
	"ecmaFeatures": {
		"modules": true
	},
	"rules": {
		"brace-style": [2, "stroustrup"],
		"no-unused-vars": [2, { "args": "none" }],
		"quotes": [2, "single", "avoid-escape"],
		"space-before-function-paren": [2, "never"],
		"valid-jsdoc": [2, {
			"prefer": {
				"return": "return"
			},
			"requireParamDescription": false,
			"requireReturn": false
		}]
	}
}
